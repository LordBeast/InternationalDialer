<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ic.stephen.internationaldialer.Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Prefix"
            android:id="@+id/textView_prefix"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save prefix"
            android:id="@+id/button_saveSettings"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/editText_prefix"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d6d1d1"
            android:id="@+id/view2"
            android:layout_below="@+id/button_saveSettings"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Logging"
            android:id="@+id/switch_logging"
            android:checked="false"
            android:layout_below="@+id/view2"
            android:layout_alignStart="@+id/button_clearHistory"
            android:layout_marginTop="27dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\?"
            android:id="@+id/textView_logQuestionMark"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:layout_alignTop="@+id/switch_logging"
            android:layout_alignEnd="@+id/button_saveSettings" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear History"
            android:id="@+id/button_clearHistory"
            android:layout_above="@+id/view2"
            android:layout_toEndOf="@+id/textView_prefix" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_prefix"
            android:hint="Country Code + Card Number + Pauses(,)"
            android:layout_below="@+id/textView_prefix"
            android:layout_alignParentStart="true" />

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Remove Ads"-->
            <!--android:id="@+id/button_removeAds"-->
            <!--android:layout_below="@+id/switch_logging"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="56dp" />-->

    </RelativeLayout>
</FrameLayout>
