<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/international_dialer_logo"
        android:cropToPadding="false"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="International Dialer"
        android:id="@+id/textView_appNameLbl"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginTop="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d6d1d1"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <TextView
        android:id="@+id/textView_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView_appNameLbl"
        android:layout_below="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="25dp"
        android:text="Version 0.1.6"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email support"
        android:id="@+id/textView_emailLbl"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/report_mail_id"
        android:id="@+id/textView_email"
        android:layout_below="@+id/textView_emailLbl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>